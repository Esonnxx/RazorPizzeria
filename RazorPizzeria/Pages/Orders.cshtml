@page
@model RazorPizzeria.Pages.OrdersModel
@{
}
<h3>Orders</h3>
<hr/>

<table class="table">
    <thead>
        <tr>
            <th>
                訂單編號
            </th>
            <th>
                訂單內容
            </th>
            <th>
                訂單總額
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var order in Model.PizzaOrders)
        {
            <tr>
                <td>
                    @order.Id

                </td>
                    
                <td>
                    @order.PizzaName
                </td>
                <td>
                    @order.BasePrice
                </td>

            </tr>
        }
    </tbody>
</table>